{
  "manifest_version": 2,
  "name": "Fastmail favicon count",
  "version": "3.0.5",
  "description": "Add a count of your unread messages to the favicon on Fastmail.",
  "icons": {
    "48": "icons/48x48.png",
    "96": "icons/96x96.png",
    "128": "icons/128x128.png",
    "256": "icons/256x256.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.fastmail.com/mail*"],
      "js": ["dist/main.js"]
    }
  ],
  "permissions": [
    "https://fastmail.com"
  ]
}
